<!-- Plugin Configuration File -->
<idea-plugin>
    <id>com.smancode.smanagent</id>
    <name>SmanAgent</name>
    <vendor email="support@smancode.com" url="https://smancode.com">SmanCode AI</vendor>

    <description><![CDATA[
        智能代码分析助手 - 支持语义搜索、调用链分析、代码理解等功能
        CLI 风格界面，平铺直叙，清晰高效。
    ]]></description>

    <!-- Product and plugin compatibility -->
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow id="SmanAgent"
                    factoryClass="com.smancode.smanagent.ide.ui.SmanAgentToolWindowFactory"
                    anchor="right"
                    icon="/META-INF/pluginIconToolWindow.svg"
                    secondary="false"/>

        <!-- Project Service -->
        <projectService serviceImplementation="com.smancode.smanagent.ide.service.StorageService"/>

        <!-- Startup Activity -->
        <startupActivity class="com.smancode.smanagent.ide.SmanAgentPlugin"/>
    </extensions>

    <actions>
        <!-- 插入代码引用 Action -->
        <action id="SmanAgent.InsertCodeReference"
                class="com.smancode.smanagent.ide.action.InsertCodeReferenceAction"
                text="插入代码引用"
                description="将选中的代码引用插入到 SmanAgent 输入框">
            <keyboard-shortcut keymap="$default" first-keystroke="control I"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta I"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta I"/>
        </action>

        <!-- 编辑器右键菜单：添加代码引用 -->
        <group id="SmanAgent.EditorPopupMenu">
            <separator/>
            <action id="SmanAgent.AddCodeReference"
                    class="com.smancode.smanagent.ide.action.AddCodeReferenceAction"
                    text="添加到 SmanAgent"
                    description="将选中的代码添加到 SmanAgent 聊天面板"
                    icon="/META-INF/pluginIconToolWindow.svg">
                <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorCopy"/>
            </action>
            <separator/>
        </group>
    </actions>
</idea-plugin>
